{
  "name": "brightereventsapi",
  "version": "1.0.0",
  "description": "events api",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "env-cmd -e development node build/server.js", 
    "start:dev": "env-cmd -e development nodemon --exec babel-node src/server.js",
    "db:migrate": "env-cmd -e development  babel-node $(npm bin)/knex migrate:latest --knexfile ./src/database/knexfile.js",
    "db:migrate:make": "env-cmd -e development babel-node $(npm bin)/knex migrate:make --knexfile ./src/database/knexfile.js",
    "db:migrate:rollback": "env-cmd -e development  babel-node $(npm bin)/knex migrate:rollback --knexfile ./src/database/knexfile.js",
    "db:seed:make": "env-cmd -e development babel-node $(npm bin)/knex seed:make --knexfile ./src/seeds/knexfile.js",
    "db:seed": "env-cmd -e development babel-node $(npm bin)/knex seed:run --knexfile ./src/seeds/knexfile.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "babel src -d build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sammykirigha/brighterEventsApi.git"
  },
  "author": "sammy",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/sammykirigha/brighterEventsApi/issues"
  },
  "homepage": "https://github.com/sammykirigha/brighterEventsApi#readme",
  "dependencies": {
    "@babel/cli": "^7.14.8",
    "@babel/core": "^7.14.8",
    "@hapi/joi": "^17.1.1",
    "env-cmd": "^10.1.0",
    "express": "^4.17.1",
    "fancy-log": "^1.3.3",
    "knex": "^0.95.7",
    "knex-migrate": "^1.7.4",
    "knex-stringcase": "^1.4.5",
    "morgan": "^1.10.0",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "@babel/node": "^7.14.7",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/plugin-transform-regenerator": "^7.14.5",
    "@babel/plugin-transform-runtime": "^7.14.5",
    "@babel/preset-env": "^7.14.8",
    "nodemon": "^2.0.12"
  }
}
